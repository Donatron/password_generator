      ul.navbar-nav
        if !currentUser
          li.nav-item.active
            a.nav-link(href="/signup") Sign Up
          li.nav-item
            a.nav-link(href="/about") About
        li.nav-item
          a.nav-link(href="/passwords") My Passwords

        if currentUser
          a(href="/logout")
            button.btn.btn-primary.pull-md-right Log Out
